# Server config
PORT=8080

# Cron scheduler config
CRON_ENABLED=true
CRON_SCHEDULE="0 */6 * * *"   # Every 6 hours (Google rotates certs roughly every 6 hours)
CRON_RUN_ON_STARTUP=true      # Run immediately when adapter starts

# Arbitrum config (for publishing to Wormhole)
ARBITRUM_RPC_URL=https://arbitrum-sepolia.drpc.org
PRIVATE_KEY=your_private_key_here
EMITTER_ADDRESS=0x62E14A87805CCd1AAA223347cbc35b64CbF02d63

# Example cron schedules:
# "*/5 * * * *"    = Every 5 minutes (for testing)
# "0 */1 * * *"    = Every hour
# "0 */6 * * *"    = Every 6 hours (recommended for Google certs)
# "0 0 * * *"      = Daily at midnight
# "0 0 * * 0"      = Weekly on Sunday
